# SenseVoice API 配置文件
# 可重命名为.env并放置在项目根目录

# 应用基础配置
APP_NAME=SenseVoice API
APP_VERSION=1.0.0

# GPU配置
DEVICE=cuda:5  # 指定使用第5号GPU

# 模型配置
MODEL_DIR=iic/SenseVoiceSmall

# 服务器配置
HOST=0.0.0.0
PORT=8000
WORKERS=4  # Uvicorn工作进程数

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 并发控制
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=600  # 秒

# 流式处理配置
CHUNK_SIZE=4096  # 音频流块大小

# 安全配置
API_KEY_ENABLED=false
API_KEY=your_api_key_here

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600  # 秒 